{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node"],
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }